      },
	    {
        "type": "url",
        "id": "button_link",
        "label": "Button URL"
      }
    ],
    "blocks": [
      {
        "type": "image",
        "name": "Image",
        "settings": [
          {
            "type": "image_picker",
            "id": "image",
            "label": "Image"
          },
          {
            "type": "html",
            "id": "svg_code",
            "label": "SVG Code"
          },
          {
            "type": "text",
            "id": "heading",
            "label": "Heading",
            "default": "Write your Story"
          },
          {
            "type": "url",
            "id": "block_link",
            "label": "Link"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Go Digital",
        "category": "Image",
        "blocks": [
          {
            "type": "image"
          },
          {
            "type": "image"
          },
          {
            "type": "image"
          }
        ]
      }
    ]
  }
{% endschema %}


