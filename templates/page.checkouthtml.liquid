  <div class="checkout-main mt-30 mb-30 mb-checkout">
    <div class="checkout-first-section mb-30">
      <h1 class="contact-title font-size26 mb-10">Contact Information</h1>
         <h2 class="account-title font-size20 mb-15">Already have an account?
          <a class="log-in ml-5 greenText fontWeightBold ">Log in</a>
         </h2>
         <input type="text" name="email_phone" class="email_phone" placeholder="Enter your email or phone number">
         <label class="keep-update" >keep me up to date on news and offers
          <input type="checkbox">
          <span class="checkmark"></span>
         </label>
    </div>
   <div class="checkout-second-section mb-30">
      <h1 class="delivery-title font-size26 mb-10">Delivery Method</h1>
      <div class="select-shipping width-100 display-block text-left mt-20">
        <div class="select-sizes">
          <div class="select-size-item display-block text-left mb-15">
            <input type="radio" id="Ship" name="Ship" value="Ship" checked="checked">
            <label for="Ship">Ship</label>
          </div>
          <div class="select-size-item display-block text-left mb-15">
            <input type="radio" id="Pickup" name="Ship" value="Pickup">
            <label for="Pickup">Pickup</label>
          </div>
        </div>
      </div>
    </div>
    
    <div class="checkout-third-section mb-30">
      <h1 class="shipping-title font-size26 mb-10">Shipping Address</h1>
         <form>
          <input type="text" name="first_name" class="shipping_input" placeholder="First Name">
          <input type="text" name="last_name" class="shipping_input" placeholder="Last Name">
          <textarea name="addresss" class="shipping_teatarea">Address</textarea>
          <input type="text" name="postal_code" class="shipping_input" placeholder="Postal Code">
         </form>
    </div>
    <div class="bottom-section width-100 display-block p-20">
      <div class="display-flex mb-20">
        <div class="width-70">
         <p class="greenText font-size18 m-0"> <i class="fa fa-shopping-bag" aria-hidden="true"></i> Show Order Summary <i class="fa fa-angle-down" aria-hidden="true"></i></p>
        </div>
        <div class="width-30">
          <p class="lightGrey m-0 text-right font-size18">$12.00</p>
          </div>
      </div>
      <div class="bottom-buyitnow display-block text-center">
        <a class="buyitnow-click">Pay Now</a>
      </div>
    </div>
  </div>
  <div class="checkout-lg">
     <div class="container">
         <div class="row">
           <div class="col-md-8">
               <div class="items-data mt-20 mb-30">
