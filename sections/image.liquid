{%- if section.settings.title != blank -%}
  <div class="section-header grid-item push-left-one-tenth lap--push-left-none">
    <h2 class="section-header__title h4">{{ section.settings.title | escape }}</h2>
  </div>
{%- endif -%}

<div class="ten-tenths lap--full-width push-left-one-tenth lap--push-left-none">

  {%- if section.settings.link != blank -%}
    <a href="{{ section.settings.link }}">
  {%- endif -%}

  <div {% if section.settings.image_mobile %} class="lap--hide" {% endif %}>
    {%- unless section.settings.image == blank -%}
      {%- render 'lazy-image', image: section.settings.image, alt: section.settings.heading -%}
    {%- else -%}
      <span class="onboarding-svg section--image-text--item__image onboarding-background">
        {{ 'image' | placeholder_svg_tag }}
      </span>
    {%- endunless -%}
  </div>
  {%- if section.settings.image_mobile -%}
    <div class="hide lap--show-block">
      {%- render 'lazy-image', image: section.settings.image_mobile, alt: section.settings.heading -%}
    </div>
  {%- endif -%}

  {%- if section.settings.link != blank -%}
    </a>
  {%- endif -%}

</div>

{% schema %}
  {
    "name": "Image",
    "class": "section-w-margin section-w-mobile-padding",
    "settings": [
      {
        "type": "text",
        "id": "title",
        "label": "Heading",
        "default": "Full width image"
      },
      {
        "type": "image_picker",
        "id": "image",
        "label": "Image"
      },
      {
        "type": "image_picker",
        "id": "image_mobile",
        "label": "Mobile image (optional)"
      },
      {
        "type": "url",
        "id": "link",
        "label": "Link"
      }
    ], 
    "presets": [
      {
        "name": "Image",
        "category": "Image"
      }
    ]
  }
{% endschema %}