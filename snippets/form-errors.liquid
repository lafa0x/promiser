{%- if form.errors -%}
	{%- for field in form.errors -%}
		<span class="alert alert--error">
			<span class="visually-hidden">{{ 'general.accessibility_labels.form_error' | t }} </span>
			<span class="alert__icon" aria-hidden="true">
        {%- render 'theme-symbols', icon: 'alert_error' -%}
			</span>
			<span class="alert__message">
				{%- if field == 'form' -%}
			    {{ form.errors.messages[field] }}
			  {%- else -%}
			    <strong>{{ form.errors.translated_fields[field] }}</strong> {{ form.errors.messages[field] }}
			  {%- endif -%}
			</span>
		</span>
	{%- endfor -%}
{%- endif -%}