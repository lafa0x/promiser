      {
        "type": "range",
        "id": "body_size",
        "label": "Base size",
        "min": 14,
        "max": 24,
        "step": 1,
        "unit": "px",
        "default": 18
      },
      {
        "type": "font_picker",
        "id": "quote_font",
        "label": "Testimonials",
        "default": "roboto_n4"
      }
    ]
  },
  {
    "name": "Product grid",
    "settings": [
      {
        "type": "select",
        "id": "grid_aspect",
        "label": "Media aspect ratio",
        "options": [
          {
            "value": "natural",
            "label": "Natural",
            "group": "Uncropped"
          },
          {
            "value": "1.333",
            "label": "Short (4:3)",
            "group": "Cropped"
          },
          {
            "value": "1",
            "label": "Square (1:1)",
            "group": "Cropped"
          },
          {
            "value": "0.833",
            "label": "Tall (5:6)",
            "group": "Cropped"
          },
          {
            "value": "0.666",
            "label": "Taller (2:3)",
            "group": "Cropped"
          }
        ],
        "default": "natural",
        "info": "When using the natural aspect ratio, make sure that you resize your thumbnails at the same size, for a clean grid design. Using one of the cropped setting, all thumbnails will be resized to the same dimension."
      },
      {
        "type": "select",
        "id": "product_animation",
        "label": "Desktop animation style",
        "options": [
          {
            "value": "product-item--zoom",
            "label": "Subtle zoom"
          },
          {
            "value": "product-item--move",
            "label": "Slight movement"
          }
        ],
        "default": "product-item--zoom"
      },
      {
        "type": "checkbox",
        "id": "product_show_secondary",
        "label": "Show second product media on hover",
        "info": "Only on desktop"
      },
      {
        "type": "checkbox",
        "id": "show_variant_image",
        "label": "Show color variants media",
        "default": false,
        "info": "Show different media for color variations, if available."
      },
      {
        "type": "color",
        "id": "color_sale_price",
        "label": "Sale price color"
      }
    ]
  },
  {
    "name": "Favicon",
    "settings": [
      {
        "type": "image_picker",
        "id": "favicon",
        "label": "Favicon image",
        "info": "32 x 32px .png required"
      }
    ]
  },
  {
    "name": "Cart page",
    "settings": [
      {
        "type": "select",
        "id": "cart_action",
        "label": "Cart type",
        "options": [
          {
            "value": "no-overlay",
            "label": "Page"
          },
          {
            "value": "overlay",
            "label": "Drawer"
          }
        ],
        "default": "overlay"
