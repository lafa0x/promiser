    $("body").removeClass("showFilter")
  });

  const loc = window.location.pathname,
        locSearch = window.location.search; 

  var inputVal = locSearch.split('=').pop().replace(/%20/g, ' ');

  if( locSearch != "") {

    $('.desktop-header-holder').find("#searchBox").val(inputVal);
    
    $('#main .custom-search').find("#searchBox").val(inputVal);

  }

  $('.desktop-header-holder').find('a').each(function() {
     $(this).toggleClass('active', $(this).attr('href') == loc);
  });

let _root = document.querySelector("body");

window.onclick = function(event) {
  if (event.target == _root) {
    $("body").removeClass("showFilter");
  }
}

window.addEventListener("touchstart", function(event){
  
