<div id="section-product" class="product" data-collection="{{ collection.handle }}" data-id="{{ product.id }}" data-availability="{{ product.available }}" {% if product.has_only_default_variant %} data-single-variant="true" {% endif %} data-variants="{{ product.options_with_values.size }}">

	{%- section 'product' -%}
	{%- section 'product-extra-toggles' -%}
	{%- section 'product-extra-images' -%}

	{%- unless product.empty == empty -%}
	  <script type="application/json" id="ProductJson" class="product-json">
	    {{ product | json }}
	  </script>
	  <script type="application/json" id="ModelJson" class="model-json">
	    {{ product.media | where: 'media_type', 'model' | json }}
	  </script>
	{%- endunless -%}

</div>

{%- section 'product-reviews' -%}
{%- section 'product-recommendations' -%}