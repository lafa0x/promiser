<div class="image-with-text image-with-text--{{ section.settings.layout }} grid">

  <div class="image-with-text__image five-tenths lap--six-tenths palm--full-width push-left-one-tenth lap--push-left-none">
    {%- unless section.settings.image == blank -%}
      {%- render 'lazy-image', image: section.settings.image, alt: section.settings.heading -%}
    {%- else -%}
      <span class="onboarding-svg section--image-text--item__image onboarding-background">
        {{ 'image' | placeholder_svg_tag }}
      </span>
    {%- endunless -%}
  </div>

  <div class="image-with-text__content four-tenths lap--five-tenths palm--full-width push-left-one-tenth lap--push-left-none">

    {%- if section.settings.heading != blank -%}
      <h3 class="image-with-text__heading {{ section.settings.text_size }}">{{ section.settings.heading | escape }}</h3>
    {%- endif -%}

    {%- if section.settings.description != blank -%}
      <div class="image-with-text__description rte">{{ section.settings.description }}</div>
    {%- endif -%}

    {%- if section.settings.button_label != blank -%}
      <a class="image-with-text__button button button--underline" href="{{ section.settings.button_link }}" title="{{ section.settings.button_label | escape }}">
        {{ section.settings.button_label | escape }}
        <span class="svg svg__arrow" aria-hidden="true">{% render 'theme-symbols', icon: 'arrow-right' %}</span>
      </a>
    {%- endif -%}

  </div>

</div>

{% schema %}
  {
    "name": "Image with text",
    "class": "section-w-mobile-padding section-w-margin section-w-reduced-margin",
    "settings": [
      {
        "type": "image_picker",
        "id": "image",
        "label": "Image"
      },
      {
        "type": "select",
        "id": "layout",
        "label": "Image position",
        "options": [
          {
            "label": "Left",
            "value": "right-alignment"
          },
          {
            "label": "Right",
            "value": "left-alignment"
          }
        ],
        "default": "right-alignment"
      },
      {
        "type": "text",
        "id": "heading",
        "label": "Heading",
        "default": "Write Your Story"
      },
      {
        "type": "select",
        "id": "text_size",
        "label": "Heading size",
        "options": [
          {
            "label": "Medium",
            "value": "h2"
          },
          {
            "label": "Large",
            "value": "h1"
          }
        ],
        "default": "h1"
      },
      {
        "type": "richtext",
        "id": "description",
        "label": "Description",
        "default": "<p>Write some information about your brand, products or story.</p>"
      },
      {
        "type": "text",
        "id": "button_label",
        "label": "Button label"
      },
      {
        "type": "url",
        "id": "button_link",
        "label": "Button link"
      }
    ],
    "presets": [
      {
        "name": "Image with text",
        "category": "Image"
      }
    ]
  }
{% endschema %}